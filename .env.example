# KodetamaBot Environment Variables

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://kodetama:kodetama_secret@localhost:5432/kodetama_db

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# TELEGRAM BOT
# =============================================================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Admin Telegram user ID for registration approvals
# Get your ID from @userinfobot
ADMIN_TELEGRAM_ID=your_admin_telegram_id

# Bot mini apps URL
WEB_APP_URL=https://your-app.com

# Bot webhook URL (for production)
WEBHOOK_URL=https://your-domain.com/bot/webhook

# Set to 'polling' for local development, 'webhook' for production
BOT_MODE=polling

# =============================================================================
# OPENROUTER AI
# =============================================================================
# Get from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model to use (e.g., openai/gpt-4-turbo, anthropic/claude-3-opus)
OPENROUTER_MODEL=openai/gpt-4-turbo

# =============================================================================
# GOOGLE INTEGRATION
# =============================================================================
# Create OAuth credentials at https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/google/callback

# =============================================================================
# API SERVER
# =============================================================================
API_PORT=3000
API_HOST=0.0.0.0

# JWT secret for API authentication
JWT_SECRET=your_super_secret_jwt_key_here

# =============================================================================
# MINI APP
# =============================================================================
VITE_API_URL=http://localhost:3000
VITE_BOT_USERNAME=your_bot_username

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_DIR=./logs

